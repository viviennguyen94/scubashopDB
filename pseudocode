session.start()
product_id = array()
session.destroy()

if ('add_to_cart' button clicked / submitted) {
    if (issent($_session('shopping_cart')) { // shopping cart already exists

    } else { // if shopping cart doesn't exist, create first product?
        // create array using submitted form data
        $_session['shopping_cart'][0] = array 
        (
            id -> get id
            name post name
            price post price
            quantity post quantity
        )
    }
}